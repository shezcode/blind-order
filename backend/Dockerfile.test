FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

RUN npm ci

# Copy all source code and tests
COPY . .

# Create data directory for SQLite
RUN mkdir -p /app/data

# Build the TypeScript code (allow failure for tests to run)
RUN npm run build || true

# Default command runs integration tests
CMD ["npm", "run", "test:integration"]