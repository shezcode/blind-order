FROM node:20-alpine

WORKDIR /app

RUN apk update && apk upgrade && \
    apk add --no-cache python3 make g++ \
    rm -rf /var/cache/apk/*

RUN addgroup -g 1001 -S nodegroup && \
    adduser -S nodeuser -u 1001 -G nodegroup

COPY package*.json ./

RUN npm install && \
    npm cache clean --force

COPY . .

RUN mkdir -p logs && chown -R nodeuser:nodegroup /app

USER nodeuser

EXPOSE 3001

CMD ["npm", "run", "dev"]